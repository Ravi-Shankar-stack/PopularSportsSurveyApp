@model FrontEnd.Models.Sport

@{
    ViewData["Title"] = "Create";
}

<style>



    body {
        background-image: url("https://images.unsplash.com/photo-1542020609584-35ba2e61d093?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80");
        background-repeat: no-repeat;
        background-position-x: center;
        background-position-y: center;
        background-size: cover;
    }
</style>
<h1>Create</h1>

<h4>Sport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SportName" class="control-label">Sport Name</label>
                <input asp-for="SportName" class="form-control" />
                <span asp-validation-for="SportName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="GetSport">Back to List</a>
</div>
<br />

@Html.ActionLink("Back", "Admin", "Home", null, new { @class = "btn btn-primary btn-large" })
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

