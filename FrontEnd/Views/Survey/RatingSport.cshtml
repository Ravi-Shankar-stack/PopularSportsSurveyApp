
@model FrontEnd.Models.Sportsurvey

@{
    Layout = "_Layout";
}

<style>

    body {
        background-image: url("https://media.istockphoto.com/id/1308693519/photo/football-scene-at-night-match-with-close-up-of-a-soccer-shoe-hitting-the-ball-with-power.jpg?b=1&s=170667a&w=0&k=20&c=VC4hxGaJzeSmae9xb88O7jnCB6oxBLF_VxebIFRjzUU=");
        background-repeat: no-repeat;
        background-position-x: center;
        background-position-y: center;
        background-size: cover;
    }
</style>

<h1>Sports Survey</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RatingSport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">


                <h4>Select Your Favorite Sport</h4>

                @Html.DropDownListFor(m => m.SurveyId, Model.Sport, "Please select")

                @*<label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />

                    <span asp-validation-for="Rating" class="text-danger"></span>*@
                <br />
                <br />

                <h3>Give Rating </h3>
                @Html.TextBoxFor(m => m.Rating, null, new { @min = "1", @max = "10", type = "number" })


            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

